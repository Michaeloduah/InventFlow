<%- include ('../layouts/header') %>

<div class="container mt-5">
  <h1 class="text-center">Create an account</h1>
  <div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
      <form class="row g-3 m-2 needs-validation" novalidate>
        <div class="col-md-6 col-sm-12 col-xs-12">
          <label for="validationCustomName" class="form-label">First Name: </label>
          <div class="input-group has-validation">
            <input
              type="text"
              class="form-control"
              name="name"
              placeholder="First Name"
              id="validationCustomName"
              aria-describedby="inputGroupPrepend"
              required
            />
            <span class="input-group-text" id="inputGroupPrepend"
              ><button type="button" class="btn">
                <i class="bi bi-person-add"></i></i></button
            ></span>
            <div class="invalid-feedback">null</div>
          </div>
        </div>

        <div class="col-md-6 col-sm-12 col-xs-12">
          <label for="validationCustomSurname" class="form-label">Surname: </label>
          <div class="input-group has-validation">
            <input
              type="text"
              class="form-control"
              name="surname"
              placeholder="Surname"
              id="validationCustomSurname"
              aria-describedby="inputGroupPrepend"
              required
            />
            <span class="input-group-text" id="inputGroupPrepend"
              ><button type="button" class="btn">
                <i class="bi bi-person"></i></button
            ></span>
            <div class="invalid-feedback">null</div>
          </div>
        </div>

        <div class="col-md-6 col-sm-12 col-xs-12">
          <label for="validationCustomUsername" class="form-label">Username: </label>
          <div class="input-group has-validation">
            <input
              type="text"
              class="form-control"
              name="username"
              placeholder="Username"
              id="validationCustomUsername"
              aria-describedby="inputGroupPrepend"
              required
            />
            <span class="input-group-text" id="inputGroupPrepend"
              ><button type="button" class="btn">
                <i class="bi bi-person-circle"></i></button
            ></span>
            <div class="invalid-feedback">null</div>
          </div>
        </div>

        <div class="col-md-6 col-sm-12 col-xs-12">
          <label for="validationCustomEmail" class="form-label">Email: </label>
          <div class="input-group has-validation">
            <input
              type="email"
              class="form-control"
              name="email"
              placeholder="Email Address"
              id="validationCustomEmail"
              aria-describedby="inputGroupPrepend"
              required
            />
            <span class="input-group-text" id="inputGroupPrepend"
              ><button type="button" class="btn">
                <i class="bi bi-envelope-at"></i></button
            ></span>
            <div class="invalid-feedback">null</div>
          </div>
        </div>

        <div class="col-md-6 col-sm-12 col-xs-12">
          <label for="validationCustomPhone" class="form-label">Phone Number: </label>
          <div class="input-group has-validation">
            <input
              type="number"
              class="form-control"
              name="phone"
              placeholder="Phone Number"
              id="validationCustomPhone"
              aria-describedby="inputGroupPrepend"
              required
            />
            <span class="input-group-text" id="inputGroupPrepend"
              ><button type="button" class="btn">
                <i class="bi bi-telephone-plus"></i></button
            ></span>
            <div class="invalid-feedback">null</div>
          </div>
        </div>

        <div class="col-md-6 col-sm-12 col-xs-12">
          <label for="validationCustomImage" class="form-label">Image: </label>
          <div class="input-group has-validation">
            <input
              type="file"
              class="form-control"
              name="image"
              placeholder="Image"
              id="validationCustomImage"
              aria-describedby="inputGroupPrepend"
              required
            />
            <span class="input-group-text" id="inputGroupPrepend"
              ><button type="button" class="btn">
                <i class="bi bi-image"></i></button
            ></span>
            <div class="invalid-feedback">null</div>
          </div>
        </div>

        <div class="col-md-6 col-sm-12 col-xs-12">
          <label for="validationCustomPassword" class="form-label"
            >Password:
          </label>
          <div class="input-group has-validation">
            <input
              type="password"
              class="form-control"
              name="password"
              placeholder="Password"
              id="validationCustomPassword"
              aria-describedby="inputGroupPrepend"
              required
            />
            <span class="input-group-text" id="inputGroupPrepend"
              ><button
                type="button"
                id="show-password"
                class="btn"
                data-bs-toggle="button"
                onclick="showPassword()"
              >
                <i class="bi bi-eye-slash-fill"></i></button
            ></span>
            <div class="invalid-feedback">null</div>
          </div>
        </div>

        <div class="col-md-6 col-sm-12 col-xs-12">
          <label for="validationCustomConfirmPassword" class="form-label"
            >Confirm Password:
          </label>
          <div class="input-group has-validation">
            <input
              type="password"
              class="form-control"
              name="confirm-password"
              placeholder="Confirm Password"
              id="validationCustomConfirmPassword"
              aria-describedby="inputGroupPrepend"
              required
            />
            <span class="input-group-text" id="inputGroupPrepend"
              ><button
                type="button"
                id="show-confirmpassword"
                class="btn"
                data-bs-toggle="button"
                onclick="showConfirmPassword()"
              >
                <i class="bi bi-eye-slash-fill"></i></button
            ></span>
            <div class="invalid-feedback">null</div>
          </div>
        </div>
        
        <div class="col-12">
          <button class="btn btn-sm btn-outline-info" type="submit">
            Register
          </button>
        </div>
      </form>
    </div>
  </div>
</div>

<%- include ('../layouts/footer') %>
